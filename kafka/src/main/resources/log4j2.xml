<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

<Appenders>
	<Console name="Console" target="SYSTEM_OUT">
		<PatternLayout pattern="%highlight(%-5level) %d{ISO8601} [%X{traceId}/%X{spanId}] [%t] %C{1.}: %msg%n%throwable" />
	</Console>

</Appenders>
<Loggers>
	<Root level="info">
		<AppenderRef ref="Console" />
	</Root>
</Loggers>
</Configuration>